{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier": "error",
        "semi": [2, "never"]
    },
    "overrides": [
        {
          "files": [
            "**/*.spec.js",
          ],
          "env": {
            "jest": true
          }
        }
    ]
}
